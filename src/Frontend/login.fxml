<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>

<VBox alignment="CENTER" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="Frontend.LoginController"
      style="-fx-background-color: linear-gradient(to bottom right, #004e92, #000428);">

    <children>
        <Region HBox.hgrow="ALWAYS" />

        <VBox alignment="CENTER" prefWidth="320.0" maxWidth="320.0" maxHeight="450.0" spacing="12.0" 
              style="-fx-background-color: white; -fx-background-radius: 15; -fx-padding: 20;">
            
            <VBox.margin>
                <Insets top="40.0" bottom="40.0" /> 
            </VBox.margin>

            <effect>
                <DropShadow color="#00000033" radius="15" spread="0.1" />
            </effect>

            <children>
                <StackPane>
                    <ImageView fx:id="logoView" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true">
                        <image>
                            <Image url="@fbrLogo.png" />
                        </image>
                        <clip>
                            <Circle centerX="50.0" centerY="50.0" radius="50.0" />
                        </clip>
                    </ImageView>
                </StackPane>

                <Label text="Welcome Back" style="-fx-text-fill: #004e92; -fx-font-weight: bold; -fx-font-size: 20;" />
                <Label text="Sign in to continue" style="-fx-text-fill: #7a7a7a; -fx-font-size: 13;" />

                <VBox spacing="10.0" maxWidth="260.0">
                    <TextField fx:id="usernameField" promptText="CNIC / Registration No" 
                               style="-fx-background-color: #f0f2f5; -fx-padding: 8; -fx-background-radius: 5;" />
                    <PasswordField fx:id="passwordField" promptText="Password" 
                                   style="-fx-background-color: #f0f2f5; -fx-padding: 8; -fx-background-radius: 5;" />
                </VBox>

                <VBox spacing="8.0" maxWidth="260.0">
                    <Button text="Sign In" onAction="#handleLogin" maxWidth="Infinity"
                            style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;" />
                    <Button text="Register Now" onAction="#handleRegister" maxWidth="Infinity"
                            style="-fx-background-color: #FFC107; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-background-radius: 5; -fx-cursor: hand;" />
                </VBox>
                
                <Hyperlink text="Forgot Password?" style="-fx-text-fill: #004e92; -fx-font-size: 11;" />
            </children>
        </VBox>

        <Region prefWidth="280.0" /> 
    </children>
</VBox>