<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Frontend.LoginController"
            style="-fx-background-color: linear-gradient(to bottom right, #004e92, #000428);">

    <children>
        <VBox alignment="CENTER" prefHeight="500.0" prefWidth="400.0" spacing="20.0" 
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;" 
              AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="50.0">
            
            <effect>
                <DropShadow color="#00000040" radius="15" spread="0.2" />
            </effect>

            <children>
                <ImageView fitHeight="120.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@fbrLogo.png" />
                    </image>
                </ImageView>

                <Label text="Welcome Back" textFill="#004e92">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>
                
                <Label text="Sign in to continue" textFill="#7a7a7a">
                    <font>
                        <Font name="Arial" size="14.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="-10.0" />
                    </VBox.margin>
                </Label>

                <VBox spacing="15.0">
                    <children>
                        <TextField fx:id="usernameField" promptText="CNIC / Registration No" 
                                   style="-fx-background-color: #f0f2f5; -fx-border-color: #d1d1d1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
                        
                        <PasswordField fx:id="passwordField" promptText="Password" 
                                       style="-fx-background-color: #f0f2f5; -fx-border-color: #d1d1d1; -fx-border-radius: 5; -fx-background-radius: 5; -fx-padding: 10;" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </VBox>

                <VBox spacing="10.0">
                    <children>
                        <Button fx:id="loginButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleLogin" text="Sign In" textFill="WHITE" 
                                style="-fx-background-color: #4CAF50; -fx-background-radius: 5; -fx-font-weight: bold; -fx-cursor: hand;">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding>
                        </Button>

                        <Button fx:id="signUpButton" maxWidth="Infinity" mnemonicParsing="false" onAction="#handleRegister" text="Register Now" textFill="WHITE" 
                                style="-fx-background-color: #FFC107; -fx-background-radius: 5; -fx-font-weight: bold; -fx-cursor: hand;">
                            <font>
                                <Font size="14.0" />
                            </font>
                            <padding>
                                <Insets bottom="10.0" top="10.0" />
                            </padding>
                        </Button>
                    </children>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </VBox>

                <Label text="Forgot Password?" textFill="#004e92" style="-fx-cursor: hand; -fx-underline: true;">
                    <font>
                        <Font size="12.0" />
                    </font>
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Label>

            </children>
        </VBox>
    </children>
</AnchorPane>