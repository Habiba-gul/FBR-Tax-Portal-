<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.TaxReceiptController" spacing="15" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: #f4f4f9;">

    <Label text="Your Tax Receipt" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <TableView fx:id="receiptTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="descCol" text="Description" prefWidth="200"/>
            <TableColumn fx:id="priceCol" text="Price (PKR)" prefWidth="120"/>
            <TableColumn fx:id="qtyCol" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="taxCol" text="Tax (PKR)" prefWidth="120"/>
        </columns>
    </TableView>

    <Label fx:id="totalTaxLabel" text="Total Tax: 0.00 PKR" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <Button text="Close" onAction="#closeReceipt" style="-fx-background-color: #dc3545; -fx-text-fill: white;"/>
</VBox>