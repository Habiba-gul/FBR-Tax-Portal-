<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.NotificationsController"
      spacing="10" style="-fx-padding:20;">

    <TableView fx:id="notificationTable" prefHeight="500" prefWidth="750">
        <columns>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="150"/>
            <TableColumn fx:id="messageColumn" text="Message" prefWidth="400"/>
            <TableColumn fx:id="typeColumn" text="Type" prefWidth="100"/>
            <TableColumn fx:id="dateColumn" text="Date" prefWidth="100"/>
        </columns>
    </TableView>

</VBox>
