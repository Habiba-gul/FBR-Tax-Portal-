<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.UserTaxRatesController" spacing="15" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: #f4f4f9;">

    <Label text="View Current Tax Rates" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <HBox spacing="15" alignment="CENTER">
        <Label text="Select Category:" />
        <ComboBox fx:id="categoryCombo" prefWidth="200" />
    </HBox>

    <HBox spacing="15" alignment="CENTER" visible="false" fx:id="subCategoryBox">
        <Label text="Select Sub-Category:" />
        <ComboBox fx:id="subCategoryCombo" prefWidth="200" />
    </HBox>

    <Button text="Show Ranges" onAction="#handleShowRanges" style="-fx-background-color: #4e54c8; -fx-text-fill: white;"/>

    <TableView fx:id="rangesTable" prefHeight="400">
        <columns>
            <TableColumn fx:id="minCol" text="Min Amount" prefWidth="150"/>
            <TableColumn fx:id="maxCol" text="Max Amount" prefWidth="150"/>
            <TableColumn fx:id="rateCol" text="Rate (%)" prefWidth="100"/>
        </columns>
    </TableView>

    <Button text="â† Back to Dashboard" fx:id="backBtn" onAction="#handleBackToDashboard"
            style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
</VBox>