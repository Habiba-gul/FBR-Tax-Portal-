<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.ReportDetailController" spacing="20" alignment="TOP_CENTER"
      style="-fx-padding: 30; -fx-background-color: #f8f9fa;">

    <Label text="Tax Payment Details" style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label fx:id="paymentDateLabel" text="Payment Date: N/A" style="-fx-font-size: 18;"/>

    <!-- Tax Breakdown Table -->
    <TableView fx:id="detailTable" prefHeight="450" prefWidth="900">
        <columns>
            <TableColumn fx:id="taxTypeCol" text="Tax Type" prefWidth="140"/>
            <TableColumn fx:id="categoryCol" text="Description" prefWidth="250"/>
            <TableColumn fx:id="taxPercentCol" text="Tax %" prefWidth="100" style="-fx-alignment: CENTER;"/>
            <TableColumn fx:id="originalPriceCol" text="Original Price (PKR)" prefWidth="180" style="-fx-alignment: CENTER_RIGHT;"/>
            <TableColumn fx:id="taxAmountCol" text="Tax Amount (PKR)" prefWidth="180" style="-fx-alignment: CENTER_RIGHT;"/>
        </columns>
    </TableView>

    <!-- Grand Total -->
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Label text="Grand Total Tax Paid:" style="-fx-font-size: 20; -fx-font-weight: bold;"/>
        <Label fx:id="grandTotalLabel" text="0.00 PKR" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #27ae60;"/>
    </HBox>

    <!-- Hidden TextArea for printing -->
    <TextArea fx:id="reportTextArea" visible="false" managed="false"/>

    <!-- Buttons -->
    <HBox spacing="25" alignment="CENTER">
        <Button text="Print Report" onAction="#handlePrint" 
                style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-size: 15; -fx-padding: 10 25;"/>
        <Button text="Save as PDF" onAction="#handleSave" 
                style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 15; -fx-padding: 10 25;"/>
        <Button text="Back" onAction="#handleBack" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-size: 15; -fx-padding: 10 25;"/>
    </HBox>

</VBox>