<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="Frontend.IncomeTaxController"
            prefHeight="750.0" prefWidth="1000.0" 
            style="-fx-background-color: #f4f6f9;">

    <children>
        <VBox alignment="TOP_CENTER" prefHeight="730.0" prefWidth="980.0" 
              style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20;" 
              AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">

            <HBox alignment="CENTER_LEFT" prefHeight="50.0" spacing="20.0">
                <Button mnemonicParsing="false" onAction="#handleBackToDashboard" text="&lt; Back to Dashboard" 
                        style="-fx-background-color: #004e92; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;">
                    <padding><Insets left="15.0" right="15.0" /></padding>
                </Button>
                <Label text="Income Tax Return Filing" textFill="#004e92">
                    <font>
                        <Font name="Arial Bold" size="24.0" />
                    </font>
                </Label>
                <VBox.margin><Insets bottom="10.0" /></VBox.margin>
            </HBox>
            
            <Label text="Please fill in all relevant sections for the current tax year." textFill="#7a7a7a">
                <font><Font size="14.0" /></font>
                <VBox.margin><Insets bottom="20.0" /></VBox.margin>
            </Label>

            <GridPane hgap="30.0" vgap="20.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
                </columnConstraints>
                <padding><Insets left="40.0" right="40.0" top="20.0" bottom="20.0" /></padding>
                
                <Label text="Personal &amp; Filing Details" GridPane.columnSpan="4" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-font-weight: bold; -fx-text-fill: #4CAF50;">
                    <font><Font size="16.0" /></font>
                </Label>
                
                <Label text="Tax Year:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextField promptText="e.g., 2024" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                
                <Label text="CNIC / NTN:" GridPane.columnIndex="2" GridPane.rowIndex="1" />
                <TextField promptText="Read-only: populated from login" GridPane.columnIndex="3" GridPane.rowIndex="1" editable="false" style="-fx-background-color: #e0e0e0;" />

                <Label text="Income Sources (Gross Amounts)" GridPane.columnSpan="4" GridPane.columnIndex="0" GridPane.rowIndex="2" style="-fx-font-weight: bold; -fx-text-fill: #004e92;">
                    <font><Font size="16.0" /></font>
                    <GridPane.margin><Insets top="20.0" /></GridPane.margin>
                </Label>

                <Label text="Salary Income:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextField fx:id="salaryIncomeField" promptText="Enter amount" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Business Income:" GridPane.columnIndex="2" GridPane.rowIndex="3" />
                <TextField fx:id="businessIncomeField" promptText="Enter amount" GridPane.columnIndex="3" GridPane.rowIndex="3" />

                <Label text="Property Rental Income:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                <TextField fx:id="rentalIncomeField" promptText="Enter amount" GridPane.columnIndex="1" GridPane.rowIndex="4" />

                <Label text="Capital Gains (Stocks, etc.):" GridPane.columnIndex="2" GridPane.rowIndex="4" />
                <TextField fx:id="capitalGainsField" promptText="Enter amount" GridPane.columnIndex="3" GridPane.rowIndex="4" />

                <Label text="Deductions &amp; Tax Credits" GridPane.columnSpan="4" GridPane.columnIndex="0" GridPane.rowIndex="5" style="-fx-font-weight: bold; -fx-text-fill: #004e92;">
                    <font><Font size="16.0" /></font>
                    <GridPane.margin><Insets top="20.0" /></GridPane.margin>
                </Label>

                <Label text="Education Expense Tax Credit:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
                <TextField fx:id="educationCreditField" promptText="Enter amount" GridPane.columnIndex="1" GridPane.rowIndex="6" />

                <Label text="Zakat Deduction:" GridPane.columnIndex="2" GridPane.rowIndex="6" />
                <TextField fx:id="zakatDeductionField" promptText="Enter amount" GridPane.columnIndex="3" GridPane.rowIndex="6" />
                
            </GridPane>
            
            <VBox alignment="CENTER" VBox.vgrow="ALWAYS">
                <Button mnemonicParsing="false" onAction="#handleSubmitTaxReturn" text="Calculate &amp; Submit Return" textFill="WHITE" 
                        style="-fx-background-color: #4CAF50; -fx-background-radius: 5; -fx-font-weight: bold; -fx-cursor: hand;">
                    <font><Font size="18.0" /></font>
                    <padding><Insets bottom="15.0" left="30.0" right="30.0" top="15.0" /></padding>
                    <VBox.margin><Insets top="50.0" /></VBox.margin>
                </Button>
            </VBox>
        </VBox>
    </children>
</AnchorPane>