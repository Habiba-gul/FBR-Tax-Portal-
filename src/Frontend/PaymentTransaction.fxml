<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.PaymentTransactionController" spacing="20" alignment="CENTER"
      style="-fx-padding: 40; -fx-background-color: #f4f6f9;">

    <Label text="Payment &amp; Transaction Details" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Label fx:id="totalTaxLabel" text="Total Tax Amount: Calculating..." style="-fx-font-size: 18;"/>
    <Label fx:id="taxPercentageLabel" text="Tax Percentage: Calculating..." style="-fx-font-size: 16;"/>
    <Label fx:id="taxDeductedLabel" text="Tax Deducted: Calculating..." style="-fx-font-size: 16;"/>

    <Label text="Itemized Receipt:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

    <TableView fx:id="receiptTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="descCol" text="Description" prefWidth="200"/>
            <TableColumn fx:id="priceCol" text="Price (PKR)" prefWidth="120"/>
            <TableColumn fx:id="qtyCol" text="Quantity" prefWidth="100"/>
            <TableColumn fx:id="taxCol" text="Tax (PKR)" prefWidth="120"/>
        </columns>
    </TableView>

    <Button text="Pay Tax Now" onAction="#payTax"
            style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 10 30;"/>

    <Button text="Back to Dashboard" onAction="#handleBack"
            style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 30;"/>
</VBox>