<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.PropertyTaxSettingsController"
      spacing="15" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: #f4f4f9;">

    <Label text="Manage Property Tax Ranges" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <TabPane tabClosingPolicy="UNAVAILABLE">
        <Tab text="Residential">
            <VBox spacing="10">
                <TableView fx:id="residentialTable" prefHeight="300" editable="true">
                    <columns>
                        <TableColumn fx:id="resMinCol" text="Min Amount" prefWidth="150"/>
                        <TableColumn fx:id="resMaxCol" text="Max Amount" prefWidth="150"/>
                        <TableColumn fx:id="resRateCol" text="Rate (%)" prefWidth="100"/>
                        <TableColumn fx:id="resDeleteCol" text="Action" prefWidth="100"/>
                    </columns>
                </TableView>
                <Button text="Add Residential Range" onAction="#addResidentialRange"
                        style="-fx-background-color: #4e54c8; -fx-text-fill: white;"/>
            </VBox>
        </Tab>

        <Tab text="Commercial">
            <VBox spacing="10">
                <TableView fx:id="commercialTable" prefHeight="300" editable="true">
                    <columns>
                        <TableColumn fx:id="comMinCol" text="Min Amount" prefWidth="150"/>
                        <TableColumn fx:id="comMaxCol" text="Max Amount" prefWidth="150"/>
                        <TableColumn fx:id="comRateCol" text="Rate (%)" prefWidth="100"/>
                        <TableColumn fx:id="comDeleteCol" text="Action" prefWidth="100"/>
                    </columns>
                </TableView>
                <Button text="Add Commercial Range" onAction="#addCommercialRange"
                        style="-fx-background-color: #4e54c8; -fx-text-fill: white;"/>
            </VBox>
        </Tab>
    </TabPane>

    <HBox spacing="20" alignment="CENTER">
        <Button text="Save All Changes" onAction="#saveAll"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-padding: 10 20;"/>
        <Button text="Back" onAction="#handleBack"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 20;"/>
    </HBox>
</VBox>