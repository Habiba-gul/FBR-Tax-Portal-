<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.AdminDashboardController">
    <content>
        <BorderPane>
            <left>
                <VBox spacing="15.0" style="-fx-background-color: #004e92; -fx-padding: 20;" prefWidth="200.0">
                    <Label text="FBR ADMIN" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;"/>
                    <Separator opacity="0.3"/>
                    <Button text="Tax Rates" onAction="#handleTaxRates" style="-fx-background-color: #337ab7; -fx-text-fill: white;"/>
                    <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
                </VBox>
            </left>
            <center>
                <VBox spacing="15.0" style="-fx-padding: 20;">
                    <Label text="User Management" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    <TableView fx:id="userTable">
                        <columns>
                            <TableColumn fx:id="cnicColumn" text="CNIC" prefWidth="150"/>
                            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100"/>
                            <TableColumn fx:id="penaltyColumn" text="Penalty" prefWidth="100"/>
                        </columns>
                    </TableView>
                </VBox>
            </center>
            <bottom>
                <HBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f5f5f5; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                    <Label text="Selected User:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="selectedNameLabel" text="None"/>
                    <Label text="CNIC:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="selectedCnicLabel" text="None"/>
                    <Label text="Status:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="selectedStatusLabel" text="None"/>
                    <Label text="Penalty:" style="-fx-font-weight: bold;"/>
                    <Label fx:id="selectedPenaltyLabel" text="0.0"/>
                    <HBox spacing="10" HBox.hgrow="ALWAYS" alignment="CENTER_RIGHT">
                        <Button text="Update Penalty" onAction="#handleUpdatePenalty" style="-fx-font-size: 11;"/>
                        <Button text="Suspend ðŸš«" onAction="#handleSuspend" style="-fx-text-fill: #a94442; -fx-font-size: 11;"/>
                        <Button text="Override ðŸ’¸" onAction="#handleOverride" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-size: 11;"/>
                        <Button text="Send Reminder ðŸ“§" onAction="#handleSendReminder" 
                                style="-fx-background-color: #f0ad4e; -fx-text-fill: white; -fx-font-size: 11;"/>
                        <Button text="Refresh" onAction="#handleRefresh" style="-fx-font-size: 11;"/>
                    </HBox>
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</ScrollPane>