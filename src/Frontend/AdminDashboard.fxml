<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToHeight="true" fitToWidth="true"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Frontend.AdminDashboardController">
    <content>
        <BorderPane>
            <left>
                <VBox spacing="15.0"
                      style="-fx-background-color: #004e92; -fx-padding: 20;"
                      prefWidth="200.0">
                    <Label text="FBR ADMIN"
                           style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;"/>
                    <Separator/>
                    <Button text="Tax Rates"
                            onAction="#handleTaxRates"
                            style="-fx-background-color: #337ab7; -fx-text-fill: white;"/>
                    <Button text="Toggle Status"
                            onAction="#handleToggleStatus"
                            style="-fx-background-color: #f0ad4e; -fx-text-fill: white;"/>
                    <Button text="Logout"
                            onAction="#handleLogout"
                            style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
                </VBox>
            </left>

            <center>
                <VBox spacing="15.0" style="-fx-padding: 20;">
                    <Label text="User Management"
                           style="-fx-font-size: 18; -fx-font-weight: bold;"/>
                    <TableView fx:id="userTable">
                        <columns>
                            <TableColumn fx:id="cnicColumn" text="CNIC" prefWidth="150">
                                <cellValueFactory>
                                    <javafx.scene.control.cell.PropertyValueFactory property="cnic"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="nameColumn" text="Name" prefWidth="150">
                                <cellValueFactory>
                                    <javafx.scene.control.cell.PropertyValueFactory property="name"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="statusColumn" text="Status" prefWidth="100">
                                <cellValueFactory>
                                    <javafx.scene.control.cell.PropertyValueFactory property="status"/>
                                </cellValueFactory>
                            </TableColumn>
                            <TableColumn fx:id="penaltyColumn" text="Penalty" prefWidth="100">
                                <cellValueFactory>
                                    <javafx.scene.control.cell.PropertyValueFactory property="penalty"/>
                                </cellValueFactory>
                            </TableColumn>
                        </columns>
                    </TableView>
                </VBox>
            </center>

            <bottom>
                <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10;">
                    <Button text="Update Penalty"
                            onAction="#handleUpdatePenalty"/>
                    <Button text="Send Reminder ðŸ“§"
                            onAction="#handleSendReminder"
                            style="-fx-background-color: #f0ad4e; -fx-text-fill: white;"/>
                    <Button text="Refresh"
                            onAction="#handleRefresh"/>
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</ScrollPane>