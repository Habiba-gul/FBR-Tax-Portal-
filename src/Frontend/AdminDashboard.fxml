<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.AdminDashboardController">
    
    <left>
        <VBox spacing="15.0" style="-fx-background-color: #004e92; -fx-padding: 20;" prefWidth="200.0">
            <Label text="FBR ADMIN" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;"/>
            <Separator opacity="0.3"/>
            <Button text="View All Users" maxWidth="Infinity" onAction="#handleViewAll"/>
            <Button text="Defaulter List" maxWidth="Infinity" onAction="#handleViewDefaulters"/>
            <Button text="Tax Rate Settings" maxWidth="Infinity" onAction="#handleTaxSettings"/>
            <Region VBox.vgrow="ALWAYS" />
            <Button text="Logout" maxWidth="Infinity" onAction="#handleLogout" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
        </VBox>
    </left>

    <center>
        <TableView fx:id="userTable" style="-fx-padding: 10;">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="cnicColumn" text="CNIC" prefWidth="150.0" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="nameColumn" text="Full Name" prefWidth="250.0" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="statusColumn" text="Status" prefWidth="150.0" style="-fx-alignment: CENTER;" />
                <TableColumn fx:id="penaltyColumn" text="Penalty Amount" prefWidth="150.0" style="-fx-alignment: CENTER;" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox spacing="30.0" style="-fx-background-color: #f4f4f4; -fx-border-color: #cccccc; -fx-border-width: 1 0 0 0; -fx-padding: 20;">
            <VBox spacing="5.0" prefWidth="400.0">
                <Label text="SELECTED TAXPAYER DETAILS" style="-fx-font-weight: bold; -fx-text-fill: #555;"/>
                <Label fx:id="selectedNameLabel" text="Name: None Selected" />
                <Label fx:id="selectedCnicLabel" text="CNIC: N/A" />
                <Label fx:id="selectedStatusLabel" text="Status: N/A" />
            </VBox>

            <HBox spacing="10.0" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button text="Issue Penalty âš–ï¸" onAction="#handlePenalty"/>
                <Button text="Suspend Account ðŸš«" onAction="#handleSuspend" style="-fx-text-fill: #a94442;"/>
                <Button text="Manual Override ðŸ’¸" onAction="#handleOverride" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </HBox>
    </bottom>
</BorderPane>