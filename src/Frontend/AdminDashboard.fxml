<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<ScrollPane fitToHeight="true" fitToWidth="true" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.AdminDashboardController">
    <content>
        <BorderPane> <!-- Removed minHeight="600.0" to allow dynamic sizing -->
            <left>
                <VBox spacing="15.0" style="-fx-background-color: #004e92; -fx-padding: 20;" prefWidth="200.0">
                    <Label text="FBR ADMIN" style="-fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 18;"/>
                    <Separator opacity="0.3"/>
                    <Button text="View All Users" maxWidth="Infinity" onAction="#handleViewAll"/>
                    <Button text="Defaulter List" maxWidth="Infinity" onAction="#handleViewDefaulters"/>
                    <Button text="Tax Rate Settings" maxWidth="Infinity" onAction="#handleTaxSettings"/>
                    <Region VBox.vgrow="ALWAYS" />
                    <Button text="Logout" maxWidth="Infinity" onAction="#handleLogout" style="-fx-background-color: #d9534f; -fx-text-fill: white;"/>
                </VBox>
            </left>

            <center>
                <TableView fx:id="userTable" style="-fx-padding: 5;"> <!-- Removed prefHeight="400.0" for dynamic sizing -->
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="cnicColumn" text="CNIC" />
                        <TableColumn fx:id="nameColumn" text="Full Name" />
                        <TableColumn fx:id="statusColumn" text="Status" />
                        <TableColumn fx:id="penaltyColumn" text="Penalty Amount" />
                    </columns>
                </TableView>
            </center>

            <bottom>
                <HBox spacing="20.0" style="-fx-background-color: #6ea7f1ff; -fx-border-color: #59b3eeff; -fx-border-width: 1 0 0 0; -fx-padding: 10;"> <!-- Removed maxHeight="150.0" for flexibility -->
                    <VBox spacing="3.0" prefWidth="300.0">
                        <Label text="SELECTED TAXPAYER DETAILS" style="-fx-font-weight: bold; -fx-text-fill: #555; -fx-font-size: 12;"/>
                        <Label fx:id="selectedNameLabel" text="Name: None Selected" style="-fx-font-size: 11;"/>
                        <Label fx:id="selectedCnicLabel" text="CNIC: N/A" style="-fx-font-size: 11;"/>
                        <Label fx:id="selectedStatusLabel" text="Status: N/A" style="-fx-font-size: 11;"/>
                    </VBox>

                    <HBox spacing="8.0" alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                        <Button text="Issue Penalty âš–ï¸" onAction="#handlePenalty" style="-fx-font-size: 11;"/>
                        <Button text="Suspend ðŸš«" onAction="#handleSuspend" style="-fx-text-fill: #a94442; -fx-font-size: 11;"/>
                        <Button text="Override ðŸ’¸" onAction="#handleOverride" style="-fx-background-color: #5cb85c; -fx-text-fill: white; -fx-font-size: 11;"/>
                    </HBox>
                </HBox>
            </bottom>
        </BorderPane>
    </content>
</ScrollPane>