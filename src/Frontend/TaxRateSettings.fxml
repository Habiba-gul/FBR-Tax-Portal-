<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Frontend.TaxRateSettingsController" prefHeight="600" prefWidth="800"
            style="-fx-background-color: #f4f6f9;">

    <VBox alignment="TOP_CENTER" spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50">
        <Label text="Tax Rate Settings" style="-fx-font-size: 24; -fx-font-weight: bold;"/>
        <Label text="Select category to manage ranges"/>

        <GridPane hgap="20" vgap="15">
            <Button text="Salary Taxes" onAction="#handleSalarySettings" prefWidth="200" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <Button text="Property Taxes" onAction="#handlePropertySettings" prefWidth="200" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="Vehicle Taxes" onAction="#handleVehicleSettings" prefWidth="200" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Button text="GST" onAction="#handleGstSettings" prefWidth="200" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        </GridPane>

        <Button text="Back to Dashboard" onAction="#handleBack" style="-fx-background-color: #6c757d; -fx-text-fill: white;"/>
    </VBox>
</AnchorPane>