<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.TaxCalculationController" spacing="20" alignment="TOP_CENTER"
      style="-fx-padding: 20; -fx-background-color: #f4f6f9;">

    <Label text="Tax Calculation Services" style="-fx-font-size: 24; -fx-font-weight: bold;"/>

    <Label text="Select Categories (Click to add details for each):"/>

    <GridPane hgap="10" vgap="10" alignment="CENTER">
        <Button text="Salary" onAction="#addSalaryForm" style="-fx-padding: 15 30; -fx-background-color: #4e54c8; -fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Button text="Property" onAction="#addPropertyForm" style="-fx-padding: 15 30; -fx-background-color: #4e54c8; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        <Button text="Vehicles" onAction="#addVehiclesForm" style="-fx-padding: 15 30; -fx-background-color: #4e54c8; -fx-text-fill: white;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <Button text="GST" onAction="#addGstForm" style="-fx-padding: 15 30; -fx-background-color: #4e54c8; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    </GridPane>

    <Label text="Entered Details:"/>

    <VBox fx:id="dynamicInputPane" spacing="15" alignment="CENTER"/>

    <Button text="Calculate All Taxes" onAction="#calculateTax" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 10 30;"/>

    <Button text="Back to Dashboard" onAction="#handleBack" style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-padding: 10 20;"/>
</VBox>