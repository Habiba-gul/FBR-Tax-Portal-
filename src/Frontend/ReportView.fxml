<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Frontend.ReportViewController" spacing="30" alignment="TOP_CENTER"
      style="-fx-padding: 40; -fx-background-color: #f8f9fa;">

    <Label text="Report-Ready Data" style="-fx-font-size: 34; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

    <Label text="You have made the following tax payments:" style="-fx-font-size: 18;"/>

    <Label fx:id="totalPaymentsLabel" text="Total Payments: 0" style="-fx-font-size: 20; -fx-font-weight: bold; -fx-text-fill: #e74c3c;"/>

    <Label text="Click on a payment date to view full details:" style="-fx-font-size: 16;"/>

    <ListView fx:id="paymentDatesList" prefHeight="250" prefWidth="700" style="-fx-font-size: 16;"/>

    <Button text="Back to Dashboard" onAction="#handleBackToDashboard" 
            style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-size: 16; -fx-padding: 12 30;"/>

</VBox>