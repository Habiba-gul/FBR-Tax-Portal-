<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" alignment="TOP_CENTER" style="-fx-background-color: #f4f4f4; -fx-padding: 30;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Frontend.UserInfoController">
    <children>
        <Label text="User Profile &amp; Status" textFill="#004e92">
            <font><Font name="System Bold" size="24.0" /></font>
        </Label>

        <GridPane vgap="15.0" hgap="10.0" alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="100.0" />
                <ColumnConstraints halignment="LEFT" minWidth="250.0" />
            </columnConstraints>
            
            <children>
                <Label text="Full Name:" GridPane.rowIndex="0" />
                <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="CNIC:" GridPane.rowIndex="1" />
                <TextField fx:id="cnicField" editable="false" style="-fx-background-color: #e0e0e0;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="Email:" GridPane.rowIndex="2" />
                <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="Phone:" GridPane.rowIndex="3" />
                <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                <Label text="Status:" GridPane.rowIndex="4" />
                <Label fx:id="statusLabel" text="Active / Filer" textFill="GREEN" GridPane.columnIndex="1" GridPane.rowIndex="4">
                    <font><Font name="System Bold" size="14.0" /></font>
                </Label>
            </children>
        </GridPane>

        <HBox spacing="20.0" alignment="CENTER">
            <Button text="Update Profile" onAction="#handleUpdate" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold;" />
            <Button text="Back to Dashboard" onAction="#handleBack" style="-fx-background-color: #004e92; -fx-text-fill: white;" />
        </HBox>
    </children>
</VBox>