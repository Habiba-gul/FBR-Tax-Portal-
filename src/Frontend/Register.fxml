<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Frontend.RegisterController"
            style="-fx-background-color: linear-gradient(to bottom right, #004e92, #000428);">

    <children>
        <VBox alignment="CENTER"
              prefHeight="600.0"
              prefWidth="450.0"
              spacing="12.0"
              style="-fx-background-color: white; -fx-background-radius: 20; -fx-padding: 40;"
              AnchorPane.topAnchor="20.0"
              AnchorPane.bottomAnchor="20.0"
              AnchorPane.leftAnchor="175.0"
              AnchorPane.rightAnchor="175.0">

            <effect>
                <DropShadow color="#00000040" radius="15" spread="0.2"/>
            </effect>

            <children>
                <!-- Logo -->
                <ImageView fitHeight="80" fitWidth="150" preserveRatio="true">
                    <image>
                        <Image url="@fbrLogo.png"/>
                    </image>
                </ImageView>

                <!-- Title -->
                <Label text="New Account Registration" textFill="#004e92">
                    <font>
                        <Font name="Arial Bold" size="20"/>
                    </font>
                </Label>

                <Label text="Please fill in your details below" textFill="#7a7a7a">
                    <font>
                        <Font size="13"/>
                    </font>
                </Label>

                <!-- Input Fields -->
                <VBox spacing="10">
                    <children>

                        <TextField fx:id="cnicField"
                                   promptText="CNIC (xxxxx-xxxxxxx-x)"
                                   style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>

                        <TextField fx:id="nameField"
                                   promptText="Full Name (as per CNIC)"
                                   style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>

                        <TextField fx:id="serviceProviderField"
                                   promptText="Service Provider (Govt / Private / Business)"
                                   style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>

                        <TextField fx:id="cellNumberField"
                                   promptText="Mobile Number (03xx-xxxxxxx)"
                                   style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>

                        <TextField fx:id="emailField"
                                   promptText="Email Address (example@email.com)"
                                   style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>

                        <PasswordField fx:id="passwordField"
                                       promptText="Password (min 8 characters)"
                                       style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>

                        <PasswordField fx:id="confirmPasswordField"
                                       promptText="Re-enter Password"
                                       style="-fx-background-color:#f0f2f5; -fx-border-color:#d1d1d1; -fx-border-radius:5; -fx-background-radius:5; -fx-padding:10;"/>
                    </children>
                </VBox>

                <!-- Register Button -->
                <Button fx:id="registerButton"
                        text="Complete Registration"
                        maxWidth="Infinity"
                        onAction="#handleRegistration"
                        textFill="WHITE"
                        style="-fx-background-color:#4CAF50; -fx-font-weight:bold; -fx-background-radius:5;">
                    <padding>
                        <Insets top="10" bottom="10"/>
                    </padding>
                </Button>

                <!-- Back to Login -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" textFill="#7a7a7a"/>
                    <Button fx:id="backToLoginButton"
                            text="Sign In"
                            onAction="#handleBackToLogin"
                            style="-fx-background-color:transparent; -fx-text-fill:#004e92; -fx-font-weight:bold;"/>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
